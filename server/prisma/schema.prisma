// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(uuid())
  googleId            String?  @unique
  facebookId          String?  @unique
  email               String?  @unique
  name                String?
  age                 Int?
  gender              String?
  location            String?
  latitude            Float?
  longitude           Float?
  jobTitle            String?
  bio                 String?
  interests           String?  // Stored as JSON string or comma-separated
  lookingForDescription String?
  photoUrl            String?
  interestedIn        String?  // Stored as JSON string or comma-separated
  ageRangeMin         Int?
  ageRangeMax         Int?
  onboardingCompleted Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  matchRecommendationsAsSource MatchRecommendation[] @relation("SourceUser")
  matchRecommendationsAsTarget MatchRecommendation[] @relation("TargetUser")
}

model MatchRecommendation {
  id              String   @id @default(uuid())
  sourceUserId    String
  targetUserId    String
  score           Int      // 0-100
  algorithm       String   // 'one_way' | 'two_way'
  reasoning       String
  matchFactors    String?  // JSON string storing extracted metadata/factors
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sourceUser      User     @relation("SourceUser", fields: [sourceUserId], references: [id], onDelete: Cascade)
  targetUser      User     @relation("TargetUser", fields: [targetUserId], references: [id], onDelete: Cascade)

  @@index([sourceUserId])
  @@index([algorithm])
  @@unique([sourceUserId, targetUserId, algorithm])
}
